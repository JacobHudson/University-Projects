<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="453.0" prefWidth="680.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="j.PrimaryController">
   <children>
      <Label text="Books In System" textAlignment="CENTER">
         <font>
            <Font size="33.0" />
         </font>
      </Label>
      <Accordion>
        <panes>
            <TitledPane animated="false" prefHeight="125.0" prefWidth="640.0" text="Book title - Author">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox prefHeight="182.0" prefWidth="640.0">
                           <children>
                              <Label prefHeight="17.0" prefWidth="644.0" text="Book Title: NAME OF BOOK">
                                 <font>
                                    <Font size="22.0" />
                                 </font>
                              </Label>
                              <Label prefHeight="17.0" prefWidth="643.0" text="Author Name: NAME OF AUTHOR">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                              <Label prefHeight="17.0" prefWidth="642.0" text="Date Published: 99/99/9999">
                                 <font>
                                    <Font size="10.0" />
                                 </font>
                              </Label>
                              <Label alignment="CENTER" prefHeight="17.0" prefWidth="644.0" text="Checked Out: CHECKOUT STATUS" textAlignment="CENTER">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
               </content>
            </TitledPane>
        </panes>
      </Accordion>
      <Button fx:id="primaryButton" onAction="#switchToSecondary" prefHeight="33.0" prefWidth="152.0" text="Edit Books In System" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
